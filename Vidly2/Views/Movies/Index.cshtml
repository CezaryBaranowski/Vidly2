@model Vidly2.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    bool areAnyMovies = Model.Movies.Count > 0 ? true : false;
}

