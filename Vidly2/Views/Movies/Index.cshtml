<h2>All Movies</h2>

@if (!areAnyMovies)
{
    <p>There are no movies yet.</p>
}
else
{
    <table class=“table table-­‐bordered table-­‐hover”>
        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>@movie.Name</td>
            </tr>
        }
    </table>
}

