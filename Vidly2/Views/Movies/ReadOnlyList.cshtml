@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Movies</h2>

<table id ="movies" class="table table-­bordered table­‐hover">
    <tbody>
    <tr>
        <th>Title</th>
        <th>Genre</th>
    </tr>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function(data, type, movie) {
                            return "<a href='/movies/details/" + movie.id + "'>" + movie.name;
                        }
                     },
                    {
                        data: "genre.name"
                    }
                ]
            });
        })
    </script>
}

